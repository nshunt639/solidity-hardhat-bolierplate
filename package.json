{
  "name": "zion-contracts",
  "version": "0.0.1",
  "description": "Repo for ZION Protocol",
  "repository": "https://github.com/Zion-PTC/contracts.git",
  "author": "Giacomo Gagliano and Zion Protocol contributors",
  "license": "MIT",
  "private": true,
  "types": "typechain-types/index.ts",
  "directories": {
      "test": "test"
  },
  "scripts": {
    "contract:clean": "hardhat clean",
    "contract:compile": "hardhat compile",
    "contract:compile:force": "hardhat compile --force",
    "contract:run": "npm run contract:clean && npm run contract:compile && hardhat deploy",
    "contract:lint": "solhint contracts/**/*.sol -w 0",
    "contract:lint-fix": "solhint contracts/**/*.sol -w 0 --fix",
    "contract:format": "prettier --list-different contracts/**/*.sol",
    "contract:format-fix": "prettier --write contracts/**/*.sol",
    "contract:deploy": "hardhat deploy",
    "contract:deploy:dev": "npm run contract:clean && npm run contract:compile && hardhat deploy --network rinkeby --env dev",
    "contract:deploy:dev:ropsten": "npm run contract:clean && npm run contract:compile && hardhat deploy --network ropsten --env dev",
    "contract:deploy:demo": "npm run contract:clean && npm run contract:compile && hardhat deploy --network rinkeby --env demo",
    "contract:deploy:demo:ropsten": "npm run contract:clean && npm run contract:compile && hardhat deploy --network ropsten --env demo",
    "contract:deploy:prod": "npm run contract:clean && npm run contract:compile && hardhat deploy --network mainnet --env prod",
    "contract:size": "hardhat size-contracts",
    "contract:verify": "hardhat verify",
    "contract:verify:dev": "hardhat verify --network rinkeby --env dev",
    "contract:verify:dev:ropsten": "hardhat verify --network ropsten --env dev",
    "contract:verify:demo": "hardhat verify --network rinkeby --env demo",
    "contract:verify:demo:ropsten": "hardhat verify --network ropsten --env demo",
    "contract:verify:prod": "hardhat verify --network mainnet --env prod",
    "test:lint": "eslint test/**/*.ts testHelpers/**/*.ts",
    "test:lint-fix": "eslint --fix test/**/*.ts testHelpers/**/*.ts scripts/**/*.ts",
    "test:format": "prettier --list-different test/**/*.ts testHelpers/**/*.ts scripts/**/*.ts",
    "test:format-fix": "prettier --write test/**/*.ts testHelpers/**/*.ts scripts/**/*.ts",
    "test:unit": "hardhat test",
    "test:coverage": "hardhat coverage --solcoverjs ./.solcover.js",
    "prepublishOnly": "npm run contract:lint && npm run contract:compile && npm run test:unit"
  },
  "devDependencies": {
    "@codechecks/client": "^0.1.12",
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/bytes": "^5.5.0",
    "@ethersproject/providers": "^5.5.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.3",
    "@typechain/ethers-v5": "^8.0.4",
    "@typechain/hardhat": "^3.0.0",
    "@types/node": "^16.11.9",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/experimental-utils": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^8.3.0",
    "eslint-utils": "^3.0.0",
    "eth-gas-reporter": "^0.2.22",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.1",
    "hardhat": "^2.6.8",
    "hardhat-abi-exporter": "^2.3.1",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-gas-reporter": "^1.0.4",
    "lodash": "^4.17.21",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.4",
    "typescript": "^4.5.2"
  }
}
